<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!--自定义对话框，去边框，无标题，背景透明-->
    <style name="dialog_custom" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>//windowFrame边框
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>//在颜色取得颜色，自定义对话框样式透明的
    </style>

    <style name="wrapcontent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textview16sp" parent="wrapcontent">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
